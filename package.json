{
  "name": "catalogo-digital",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "eslint-plugin-import-helpers"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "import-helpers/order-imports": [
        "warn",
        {
          "newlinesBetween": "always",
          "groups": [
            "module",
            [
              "/^App/",
              "/^Config/",
              "/^Contracts/",
              "/^Database/"
            ],
            "/^@/(.*)/",
            "/@ioc:(.*)/",
            [
              "parent",
              "sibling",
              "index"
            ]
          ],
          "alphabetize": {
            "order": "asc",
            "ignoreCase": true
          }
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.8.0",
    "@babel/preset-react": "^7.0.0",
    "@heroicons/react": "^1.0.6",
    "@hookform/resolvers": "^2.9.1",
    "@japa/preset-adonis": "^1.1.0",
    "@japa/runner": "^2.0.9",
    "@symfony/webpack-encore": "^2.1.0",
    "@tailwindcss/forms": "^0.5.2",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "adonis-preset-ts": "^2.1.0",
    "autoprefixer": "^10.4.7",
    "clsx": "^1.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^8.1.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^6.0.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.32.2",
    "tailwind-merge": "^1.3.0",
    "tailwindcss": "^3.1.4",
    "ts-loader": "^9.3.1",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4",
    "zod": "^3.17.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.1",
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/lucid": "^18.1.0",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/session": "^6.2.0",
    "@adonisjs/shield": "^7.0.11",
    "@adonisjs/view": "^6.1.0",
    "@eidellev/inertia-adonisjs": "^6.3.0",
    "@inertiajs/inertia": "^0.11.0",
    "@inertiajs/inertia-react": "^0.8.0",
    "luxon": "^2.4.0",
    "pg": "^8.7.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
